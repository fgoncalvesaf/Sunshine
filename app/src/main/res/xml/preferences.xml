<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/location_setting"
        android:key="@string/location_key"
        android:defaultValue="@string/location_default"
        android:inputType="number"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/measure_setting"
        android:key="@string/measure_key"
        android:entries="@array/options"
        android:entryValues="@array/values"
        android:defaultValue="@string/measure_default"  />

</PreferenceScreen>